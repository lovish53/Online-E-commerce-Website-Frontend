<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Login Page</title>
</head>
<body>
    <section id="login"> 
        <div class="container">
        <div class="row">
            <div class="col-md-4" ></div>
            <div class="col-md-4">
                <h2>Login Here!!</h2>
                <%=message%>
                <form action="" method="post" class="d-block">
                    <label for="">Email</label>
                    <input type="Email" name="email" class="form-control" style="width: 380px;" required>
                    <label for="">Password</label>
                    <input type="password" name="pass" class="form-control" id="passshow" style="width: 380px;" required>
                      <a href="" class="mt-1">Forgot Password?</a>
                    <button type="submit" class="btn btn-success form-control mt-2" style="width: 380px;">Login</button>
                </form>
                <button type="" id="eye-button" onclick="showpass()" class="d-flex ms-auto"><p ><i class="bi bi-eye" id="eye-icon"></i></button>
                <div class="container mt-1">
                    <div class="row">
                    <div class="col-md-5"><hr></div>
                    <div class="col-md-2 text-center">OR</div>
                    <div class="col-md-5"><hr></div>
                    </div>
                </div>
                <a href="/reg"><button class="btn btn-info form-control" style="width: 380px;">Create Account</button></a>
            </div>
            <div class="col-md-4"></div>
    </div>
</section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        
        function showpass(){
         let a=document.getElementById("passshow").attributes[0].value  
        if(a=='password'){
        document.getElementById("passshow").attributes[0].value='text'
        document.getElementById('eye-icon').attributes[0].value="bi bi-eye-slash"    
        }
        else if(a=='text'){
        document.getElementById("passshow").attributes[0].value='password'
        document.getElementById('eye-icon').attributes[0].value="bi bi-eye"    
        }
    }
       
    </script>
</body>
</html>